          <div class="form-outline mb-2 cover-group">
            <input type="text" id="inputStockPrice" name="inputStockPrice" class="form-control"/>
            <label class="form-label" for="inputStockPrice">Stock/Crypto Current Price</label>  
          </div>

          <div class="form-outline mb-2">
              <select id="inputTradeType" class="form-select">
