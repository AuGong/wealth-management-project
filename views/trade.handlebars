          <div class="form-outline mb-2">
              <select id="inputAssetType" class="form-select">
              <option selected>0: Stock</option>
              <option>1: Crypto</option>
              </select>
              <label for="inputAssetType" class="form-label">Asset Type</label>
          </div>


          <div class="form-outline mb-2 cover-group">
            <div class="input-group">
